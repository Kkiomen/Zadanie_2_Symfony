    <div class="container alerts">
        {% for type,messages in app.session.flashBag.all %}
            {% for msg in messages %}
                <div class="alert alert-{{ type }}">{{ msg }}</div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block pageContainer %}{% endblock %}

    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
</body>
</html>
